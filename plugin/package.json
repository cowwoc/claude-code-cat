{
  "name": "claude-code-cat",
  "version": "2.0",
  "description": "Multi-agent task orchestration with comprehensive planning and quality gates",
  "repository": {
    "type": "git",
    "url": "https://github.com/cowwoc/cat.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "multi-agent",
    "orchestration",
    "plugin"
  ],
  "author": "cowwoc",
  "license": "https://github.com/cowwoc/cat/blob/main/LICENSE.md",
  "scripts": {
    "test": "npx bats tests/**/*.bats",
    "test:scripts": "npx bats tests/scripts/*.bats",
    "test:hooks": "npx bats tests/hooks/*.bats",
    "test:handlers": "python3 -m pytest tests/handlers/ -v",
    "test:handlers:cov": "python3 -m pytest tests/handlers/ -v --cov=plugin/hooks/skill_handlers --cov-report=term-missing",
    "test:all": "npm run test && npm run test:handlers"
  },
  "devDependencies": {
    "bats": "^1.13.0"
  }
}

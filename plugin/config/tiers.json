{
  "$schema": "./tiers.schema.json",
  "version": "2.0.0",
  "tiers": {
    "core": {
      "name": "Core",
      "description": "The reliable AI coding workflow",
      "features": [
        "basic-task-management",
        "local-worktrees",
        "basic-commit-hooks",
        "git-safety-tools",
        "status-command",
        "init-command"
      ]
    },
    "pro": {
      "name": "Pro",
      "description": "Advanced capabilities for professional developers",
      "features": [
        "single-agent-execution",
        "multi-agent-orchestration",
        "parallel-task-execution",
        "stakeholder-reviews",
        "token-usage-tracking",
        "learn",
        "task-decomposition",
        "research-skill",
        "all-commands",
        "all-skills",
        "collision-prevention",
        "team-pulse",
        "shared-brain",
        "context-preservation",
        "branch-policies",
        "team-analytics",
        "project-budgets",
        "slack-discord-notifications",
        "github-pr-integration",
        "ci-status-awareness",
        "github-issues-sync",
        "linear-sync"
      ],
      "includes": "core"
    },
    "enterprise": {
      "name": "Enterprise",
      "description": "For organizations with compliance needs",
      "features": [
        "sso-saml",
        "scim-provisioning",
        "audit-logging",
        "compliance-export",
        "human-review-gates",
        "jira-sync",
        "teams-notifications",
        "webhook-api",
        "data-residency",
        "priority-support",
        "sla-guarantees"
      ],
      "includes": "pro"
    }
  },
  "features": {
    "basic-task-management": {
      "description": "Create and track tasks with plan-work-commit-merge workflow",
      "category": "planning"
    },
    "local-worktrees": {
      "description": "Isolated git worktrees for tasks",
      "category": "isolation"
    },
    "basic-commit-hooks": {
      "description": "Pre-commit validation hooks",
      "category": "hooks"
    },
    "git-safety-tools": {
      "description": "Backup, safe-rm, squash, rebase safety wrappers",
      "category": "safety"
    },
    "status-command": {
      "description": "View project status",
      "category": "commands"
    },
    "init-command": {
      "description": "Initialize CAT structure",
      "category": "commands"
    },
    "single-agent-execution": {
      "description": "Execute tasks with single subagent",
      "category": "execution"
    },
    "multi-agent-orchestration": {
      "description": "Coordinate multiple subagents",
      "category": "execution"
    },
    "parallel-task-execution": {
      "description": "Run independent tasks concurrently",
      "category": "execution"
    },
    "stakeholder-reviews": {
      "description": "Multi-perspective code review with 11 stakeholders",
      "category": "quality"
    },
    "token-usage-tracking": {
      "description": "Monitor and report token consumption",
      "category": "monitoring"
    },
    "learn": {
      "description": "Mistake learning, RCA, and retrospective analysis",
      "category": "quality"
    },
    "task-decomposition": {
      "description": "Auto-decompose oversized tasks",
      "category": "planning"
    },
    "research-skill": {
      "description": "Multi-stakeholder research before implementation",
      "category": "quality"
    },
    "all-commands": {
      "description": "Access to all CAT commands",
      "category": "commands"
    },
    "all-skills": {
      "description": "Access to all CAT skills",
      "category": "skills"
    },
    "collision-prevention": {
      "description": "Prevent multiple devs working same task",
      "category": "collaboration"
    },
    "team-pulse": {
      "description": "Real-time team activity dashboard",
      "category": "collaboration"
    },
    "shared-brain": {
      "description": "Team-wide conventions enforced automatically",
      "category": "collaboration"
    },
    "context-preservation": {
      "description": "Cross-session handoff with decision context",
      "category": "collaboration"
    },
    "branch-policies": {
      "description": "Branch naming conventions enforced",
      "category": "collaboration"
    },
    "team-analytics": {
      "description": "Team activity and productivity analytics",
      "category": "collaboration"
    },
    "project-budgets": {
      "description": "Token budget limits per project",
      "category": "collaboration"
    },
    "slack-discord-notifications": {
      "description": "Notifications to Slack and Discord",
      "category": "integrations"
    },
    "github-pr-integration": {
      "description": "GitHub pull request integration",
      "category": "integrations"
    },
    "ci-status-awareness": {
      "description": "CI/CD pipeline status awareness",
      "category": "integrations"
    },
    "github-issues-sync": {
      "description": "Sync with GitHub Issues",
      "category": "integrations"
    },
    "linear-sync": {
      "description": "Sync with Linear",
      "category": "integrations"
    },
    "sso-saml": {
      "description": "SSO/SAML authentication via WorkOS",
      "category": "compliance"
    },
    "scim-provisioning": {
      "description": "SCIM user provisioning",
      "category": "compliance"
    },
    "audit-logging": {
      "description": "Detailed operation audit trail",
      "category": "compliance"
    },
    "compliance-export": {
      "description": "Export audit data for compliance",
      "category": "compliance"
    },
    "human-review-gates": {
      "description": "Mandatory human approval points",
      "category": "compliance"
    },
    "jira-sync": {
      "description": "Sync with Jira",
      "category": "integrations"
    },
    "teams-notifications": {
      "description": "Microsoft Teams notifications",
      "category": "integrations"
    },
    "webhook-api": {
      "description": "Webhook API for custom integrations",
      "category": "integrations"
    },
    "data-residency": {
      "description": "Control where data is stored",
      "category": "compliance"
    },
    "priority-support": {
      "description": "Priority support channel",
      "category": "support"
    },
    "sla-guarantees": {
      "description": "Service level agreements",
      "category": "support"
    }
  }
}
